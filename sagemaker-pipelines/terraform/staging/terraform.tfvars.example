# SageMaker Pipelines Staging Configuration
# Copy this file to terraform.tfvars and update the values
# Backend configuration is handled via GitHub repository secrets (TF_BACKEND_BUCKET)

# Core Configuration
project_name = "iris-ml"
environment  = "staging"

# AWS Configuration
aws_region = "us-east-1"

# S3 Configuration - Update with your actual bucket name
s3_bucket_name = "your-ml-bucket-staging"

# Container Images - Update with your actual ECR URIs
training_image_uri  = "123456789012.dkr.ecr.us-east-1.amazonaws.com/iris-training:latest"
inference_image_uri = "123456789012.dkr.ecr.us-east-1.amazonaws.com/iris-inference:latest"

# MLflow Configuration - Update with your MLflow server URI
mlflow_tracking_uri = "https://your-mlflow-server.com"

# Scheduling Configuration
enable_training_schedule  = true   # Weekly training on Sundays at 2 AM UTC
enable_inference_schedule = true   # Daily inference at 6 AM UTC

# Instance Configuration (optional - defaults are usually fine)
training_instance_type  = "ml.m5.large"
inference_instance_type = "ml.m5.large"

# Tags
tags = {
  Owner       = "ml-team"
  Project     = "iris-classification"
  Environment = "staging"
  CostCenter  = "ml-engineering"
}
