# Example terraform.tfvars file for SageMaker Studio staging deployment
# Copy this file to terraform.tfvars and customize the values for your environment

# Project and environment settings
project_name        = "ml-platform"
environment         = "staging"
bucket_name_suffix  = "your-team-name"  # Make this unique for your organization

# Network configuration - Update these with your actual VPC and subnet IDs
# vpc_id     = "vpc-12345678"
# subnet_ids = ["subnet-12345678", "subnet-87654321"]

# SageMaker Studio configuration
user_profile_name           = "staging-ml-user"
auth_mode                   = "IAM"
app_network_access_type     = "PublicInternetOnly"  # Use "VpcOnly" for production
default_instance_type       = "ml.t3.medium"

# S3 configuration
enable_s3_bucket = true
# s3_bucket_name = "custom-ml-bucket-name"  # Optional: specify custom bucket name

# Custom domain and role names (optional)
# domain_name         = "my-custom-sagemaker-domain"
# execution_role_name = "my-custom-sagemaker-role"

# Tags for all resources
tags = {
  Environment = "staging"
  Project     = "ml-platform"
  Team        = "ML-Engineering"
  Owner       = "ml-team@company.com"
  CostCenter  = "ML-Operations"
}
